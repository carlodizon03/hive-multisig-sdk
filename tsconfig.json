{
    "compilerOptions": {
      "jsx": "react",
      "lib": ["es5", "es6", "dom"],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "allowJs": true,
    },
    "include": ["src/**/*", "package.json"],
    "exclude": ["dist"]
  }
  